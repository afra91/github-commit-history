{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-react"
  ],
  "plugins": [
    "react-hooks"
  ],
  "linterOptions": {
    "exclude": ["node_modules/", "build/", "dist/"]
  },
  "jsRules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "rules": {},
  "rulesDirectory": []
}
